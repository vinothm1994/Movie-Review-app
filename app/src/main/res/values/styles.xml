<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Base.AppTheme" />


    <!-- Base application theme. -->
    <style name="Base.AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorSecondary">?attr/colorPrimary</item>
        <item name="colorOnSecondary">@color/secondaryColor</item>

        <!-- Window decor -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:navigationBarColor">@color/nav_bar_scrim</item>

        <!-- Widget styles -->
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
        <item name="tabStyle">@style/Widget.App.Tabs</item>
        <item name="navigationViewStyle">@style/Widget.App.NavigationView</item>

        <!-- Text appearances -->
        <item name="textAppearanceBody2">@style/TextAppearance.App.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.App.Button</item>
        <item name="textAppearanceListItem">@style/TextAppearance.App.ListPrimary</item>

        <!-- Dialogs -->
        <item name="materialAlertDialogTheme">@style/AlertDialog.Theme</item>
        <item name="android:fontFamily">@font/hanken</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:paddingEnd">8dp</item>
        <item name="contentInsetStartWithNavigation">10dp</item>
        <item name="popupTheme">@style/AppTheme.PopupTheme</item>
        <item name="titleTextAppearance">@style/TextAppearance.App.ToolbarTitle</item>
    </style>


    <style name="AppTheme.PopupTheme" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="TextAppearance.App.ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/hanken</item>
        <item name="android:textSize" tools:ignore="SpUsage">20dp</item>
    </style>

    <style name="TextAppearance.App.Tab" parent="@style/TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/hanken</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>


    <style name="Widget.App.Tabs" parent="@style/Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/TextAppearance.App.Tab</item>
        <item name="tabIndicator">@drawable/tab_indicator</item>
    </style>


    <style name="Widget.App.NavigationView" parent="@style/Widget.MaterialComponents.NavigationView">
        <item name="itemBackground">@drawable/navigation_item_background</item>
        <item name="itemHorizontalPadding">@dimen/nav_item_horizontal_padding</item>
    </style>


    <!-- Intermediate style to make further style extensions below easier to follow -->
    <style name="TextAppearance.App.Body2" parent="TextAppearance.MaterialComponents.Body2" />


    <style name="TextAppearance.App.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:fontFamily">@font/hanken</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/hanken</item>
    </style>


    <!-- List item primary text, e.g. event titles, codelab titles -->
    <style name="TextAppearance.App.ListPrimary" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">@font/hanken</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontFamily">@font/hanken</item>
    </style>

    <style name="AlertDialog.Theme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarStyle">@style/AlertDialog.ButtonBar</item>
        <item name="dialogCornerRadius">@dimen/dialog_corner_radius</item>
        <item name="dialogPreferredPadding">@dimen/dialogPreferredPadding</item>
        <item name="materialAlertDialogTitleTextStyle">@style/AlertDialog.TitleText</item>
        <item name="materialAlertDialogTitlePanelStyle">@style/AlertDialog.TitlePanel</item>
        <item name="materialAlertDialogBodyTextStyle">@style/AlertDialog.BodyText</item>
    </style>


    <style name="AlertDialog.TitleText" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:fontFamily">@font/hanken</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/hanken</item>
    </style>

    <style name="AlertDialog.TitlePanel" parent="MaterialAlertDialog.MaterialComponents.Title.Panel">
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingTop">?attr/dialogPreferredPadding</item>
    </style>

    <style name="AlertDialog.BodyText" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="AlertDialog.ButtonBar" parent="@style/Widget.AppCompat.ButtonBar.AlertDialog">
        <item name="android:paddingBottom">@dimen/margin_small</item>
        <item name="android:paddingTop">@dimen/margin_small</item>
    </style>


    <style name="RoundedCornerMaterialButton">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/rounded_shape</item>
        <item name="android:backgroundTint">#472D30</item>
    </style>


    <style name="RoundedBorderCornerMaterialButton">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/rounded_border_shape</item>

    </style>


    <style name="LoginTitleHeading">
        <item name="android:fontFamily">@font/hanken_light</item>
        <item name="fontFamily">@font/hanken_light</item>
        <item name="android:textColor">#707070</item>
        <item name="android:textSize">24sp</item>

    </style>

    <style name="MovieTitle">
        <item name="android:fontFamily">@font/proxima_nova_bxtrabold</item>
        <item name="fontFamily">@font/proxima_nova_bxtrabold</item>
        <item name="android:textColor">#FFE1AB</item>
        <item name="android:textSize">24sp</item>

    </style>


    <style name="MovieRelease">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>


    <style name="MovieDetailWhite">
        <item name="fontFamily">@font/hanken</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MovieDetailDurationWhite">
        <item name="fontFamily">@font/hanken</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>


</resources>
